{% extends 'base.html.twig' %}

{% block title %}{{ 'room.title'|trans }}{% endblock %}

{% block body %}
    <div class="w-full mb-36">
        <h1 class="my-24 mt-36 text-7xl font-bold text-center shelter-font">
            {{ 'views.home.title'|trans }}
        </h1>
        <div class="flex flex-row flex-wrap mb-32">
            {% for room in rooms %}
                <div class="text-center ml-16 mr-5 mt-10">
                    <a href="{{ path('app_catalog_show', {'genreGuid': genre.guid, 'guid': room.guid}) }}">
                        <img src="{{ asset('images/door.png') }}" alt="" class="rounded-3xl drop-shadow-xl object-cover w-96 h-96 mb-9">
                        <span class="place-self-center text-8xl shelter-font ">{{ room.code}}</span>
                    </a>
                </div>
            {% endfor %}
        </div>


    </div>

        <div class="sticky bottom-0 z-50 w-full h-32 shadow-inner bg-white">
            <div class="flex h-full place-content-center">
                <a class="w-1/3 mt-4 flex-1 shelter-font items-center" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/arrow_back.png') }}" alt="" class="w-24 mx-auto">
                </a>
                <a class="w-1/3 mt-4 flex-1 shelter-font" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/home.png') }}" alt="" class="w-24 mx-auto">
                </a>
                <div class="w-1/3 mt-4 flex-1 shelter-font">
                    {#                    <img src="{{ asset('images/search.png') }}" alt="" class="w-24 mx-auto">#}
                </div>
            </div>
        </div>


{% endblock %}
