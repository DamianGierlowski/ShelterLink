{% extends 'base.html.twig' %}

{% block title %}{{ room.code|trans }}{% endblock %}

{% block body %}
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
        <tr>
            <th>{{ 'room.code'|trans }}</th>
            <th>{{ 'room.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.code }}</td>
                <td>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">{{ 'common.edit'|trans }}</a>
                    <a href="{{ path('app_room_delete', {'id': room.id}) }}">{{ 'common.delete'|trans }}</a>
                    <a href="{{ path('app_catalog', {'guid': room.guid}) }}">{{ 'room.animals'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'common.empty'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>


{% endblock %}
