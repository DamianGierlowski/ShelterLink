<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{ form_start(form, {'attr': {'class': 'form'} }) }}

            <div class="form-group row mb-2">
                <label for="{{ form.code.vars.id }}" class="col-sm-2 col-form-label">{{'room.code'|trans}}</label>
                <div class="col-sm-8">
                    {{ form_widget(form.code, {'attr': {'class': 'form-control'} }) }}
                </div>
                <button type="submit" class="col-sm-2 btn btn-primary">{{'common.submit'|trans}}</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
