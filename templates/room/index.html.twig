{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}

    <h1>Create new Room</h1>

    {{ include('room/_form.html.twig') }}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.code }}</td>
                <td>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
