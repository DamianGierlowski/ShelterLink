<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="{{ path('app_dashboard') }}" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
{#                        <span class="fs-5 d-none d-sm-inline"></span>#}
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                        {% if is_granted('ROLE_MODERATOR') %}
                        <li class="nav-item">
                            <a href="{{ path('app_animal_index') }}" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house">A</i> <span class="ms-1 d-none d-sm-inline">{{ 'sidebar.animals'|trans }}</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_genre_index') }}" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house">G</i> <span class="ms-1 d-none d-sm-inline">{{ 'sidebar.genre'|trans() }}</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_room_index') }}" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house">R</i> <span class="ms-1 d-none d-sm-inline">{{ 'sidebar.rooms'|trans }}</span>
                            </a>
                        </li>
                        {% endif %}

                    </ul>
                    <hr>
                    {% if is_granted('ROLE_USER') %}
                    <span class="d-none d-sm-inline mx-1"> <a href="{{ path('app_logout') }}" class="nav-link align-middle px-0">{{ 'sidebar.logout'|trans }}</span>
                    {% else %}
                        <span class="d-none d-sm-inline mx-1"> <a href="{{ path('app_login') }}" class="nav-link align-middle px-0">{{ 'sidebar.login'|trans }}</span>
                    {% endif %}

{#               #}
                </div>
            </div>
            <div class="col py-3">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

    </body>
</html>
