
{{ form_start(form, {'attr': {'class': 'form'} }) }}
<div class="flex items-center justify-center">
    <div class="container">

        {% set formErrors = form.vars.errors.form.getErrors(true) %}

        {% if formErrors|length %}
            <ul>
                {% for error in formErrors %}
                    <div class="mt-4">
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                            <strong class="font-bold">Błąd formularza!</strong>
                            <span class="block sm:inline"> {{ error.message }}</span>
                        </div>
                    </div>
                {% endfor %}
            </ul>
        {% endif %}


        {% if form_errors(form.name) %}
        <div class="mt-4">
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Błąd formularza!</strong>
                <span class="block sm:inline"> {{ form_errors(form.name) }}</span>
            </div>
        </div>
        {% endif %}

        <div class="w-full flex flex-row flex-no-wrap rounded-lg sm:shadow-lg my-6 py-5 mt-6 items-end space-y-4 px-6 md:space-x-6 xl:space-y-0">

                <div class="space-x-4 rounded border-2 p-2 flex-row sm:flex-col lg:w-1/3 ">
                    {{ form_widget(form.name, {'attr': {'class': 'text-md w-full text-gray-600 outline-none'} }) }}
                </div>
                <div class="space-x-4 rounded border-2 p-2 flex-row sm:flex-col lg:w-1/3">

                    {{ form_widget(form.file, {'attr': {'class': 'text-md w-full text-gray-600 outline-none'} }) }}
                </div>
                <div class="space-x-4 cursor-pointer rounded bg-shelter-green text-center text-indigo-50 border-2 lg:w-1/3">
                    <button type="submit" class="p-2">{{'common.submit'|trans}}</button>
                </div>
        </div>

    </div>
</div>
{{ form_end(form) }}

