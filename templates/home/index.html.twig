{% extends 'base.html.twig' %}

{% block title %}ShelterLine{% endblock %}

{% block body %}
    <div>
        <h1 class="mt-24 text-9xl font-bold text-center shelter-green lg:text-4xl">
            {{ 'views.home.title'|trans }}
        </h1>
        <div class="flex flex-col place-items-center lg:flex-row">
            {% for genre in genres %}
                <div class="mt-24 text-center lg:ml-24">
                    <a href="{{ path('app_catalog', {'guid': genre.guid}) }}">
                        <img src="{{ asset(genre.file ? 'archive/' ~ genre.file.fileName :  'images/question.png') }}" alt="" class="max-w-sm mb-9 lg:w-44">
                        <span class="text-8xl text-center shelter-green lg:text-3xl">{{ genre.name }}</span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
