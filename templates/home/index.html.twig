{% extends 'base.html.twig' %}

{% block title %}ShelterLine{% endblock %}

{% block body %}
    <div class="w-full">
        <h1 class="my-24 mt-56 text-7xl font-bold text-center shelter-font">
            {{ 'views.home.title'|trans }}
        </h1>
        <div class="flex flex-row flex-wrap">
            {% for genre in genres %}
                <div class="text-center ml-16 mr-5">
                    <a href="{{ path('app_catalog', {'guid': genre.guid}) }}">
                        <img src="{{ asset('archive/0188CFAD-4AB7-7E96-8D1F-3BF59ACBBAB9.jpg') }}" alt="" class="rounded-3xl drop-shadow-xl object-cover w-96 h-96 mb-9">
                        <span class="place-self-center text-8xl shelter-font mb-24">{{ genre.name }}</span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>


    <div class="fixed bottom-0 z-50 w-full h-32 shadow-inner bg-white">
        <div class="flex h-full place-content-center">
                <a class="w-1/3 mt-4 flex-1 shelter-font items-center">
                    <img src="{{ asset('images/arrow_back.png') }}" alt="" class="w-24 mx-auto">
                </a>
                <a class="w-1/3 mt-4 flex-1 shelter-font">
                    <img src="{{ asset('images/home.png') }}" alt="" class="w-24 mx-auto">
                </a>
                <a class="w-1/3 mt-4 flex-1 shelter-font">
                    <img src="{{ asset('images/search.png') }}" alt="" class="w-24 mx-auto">
                </a>
        </div>
    </div>

{% endblock %}
